<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/banner_bg"
     xmlns:android="http://schemas.android.com/apk/res/android"
     >

    <LinearLayout
         android:id="@+id/rlin"
       		 android:orientation="vertical"
		     android:layout_width="wrap_content"
		     android:layout_height="match_parent"
		     android:paddingTop="23dp">

		 <LinearLayout
		     android:layout_width="wrap_content"
		     android:layout_height="0dp"
		     android:layout_weight="1"
		     android:background="@drawable/logo" >
</LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup_main"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >

           
            <RadioButton
                android:id="@+id/rb_main_menu1"
                style="@style/TopMenu"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="系统首页" />

            <RadioButton
                android:id="@+id/rb_main_menu2"
                style="@style/TopMenu"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="风机控制" />

            <RadioButton
                android:id="@+id/rb_main_menu3"
                style="@style/TopMenu"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/rejiahuan" />

            <RadioButton
                android:id="@+id/rb_main_menu4"
                style="@style/TopMenu"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="数据详情" />

            <RadioButton
                android:id="@+id/rb_main_menu5"
                style="@style/TopMenu"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="更多设置" />

            <RadioButton
                android:id="@+id/rb_main_menu6"
                style="@style/TopMenu"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/qijiayiju" />
        </RadioGroup>

    </LinearLayout>
        
    
    <FrameLayout
        android:id="@+id/Fragment_jiemian"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical"
       android:layout_weight="8">
        
    </FrameLayout>
    
</LinearLayout>